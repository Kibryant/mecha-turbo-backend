{
    "compilerOptions": {
        "lib": [
            "ES2023"
        ],
        "module": "node16",
        "target": "ES2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
    },
    "include": [
        "src/**/*",
        "tsconfig.scripts.json",
        "scripts"
    ],
    "exclude": [
        "node_modules"
    ]
}